<h2>アカウント設定変更</h2>

<%= form_with model: @user do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%=f.label :password %>
    <%= f.password_field :password %>
    <%=f.label :password_confirmation, 'パスワード（確認）' %>
    <%= f.password_field :password_confirmation, placeholder:"パスワードを再度入力してください" %>
    <%=f.label :current_password, '現在のパスワード' %>
    <%= f.password_field :current_password, placeholder:"変更前のパスワードを入力してください" %>
    <%= f.submit "変更" %>
<% end %>
