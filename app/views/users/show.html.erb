<!--showビューにアカウントとプロフィールを設置-->
<!--プロフィールはフォームあり（showで）もちろんuserコントローラーのupdateアクションに送信-->
<!--アカウントはeditビューに遷移-->

<!--アカウント-->
<%= @user.email %>
<%= @user.password %>
<%= link_to "変更する" edit_user_path(@user)(key: "account") %>


<!--プロフィール-->
<%= form_with @user, url: {action: 'update' } do |f| %>
    <%= f.label :icon_image %>
    <%= f.file_field :icon_image %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :introduction %>
    <%= f.text_area :introduction, size: "30x4" %>
<% end %>




