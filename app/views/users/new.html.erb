<h2>ユーザー登録</h2>

<%= render "shared/error", obj: @user %>

<%= form_with model: @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%=f.label :password %>
  <%= f.password_field :password, placeholder:"6文字以上入力してください" %>
  <%=f.label :password_confirmation, 'パスワード（確認）' %>
  <%= f.password_field :password_confirmation, placeholder:"パスワードを再度入力してください" %>
  <%= f.submit "新規アカウント作成" %>
<% end %>
